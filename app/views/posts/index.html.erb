<h1>Posts for the users</h1>
   <div class= 'styleusers'>
        <%= image_tag @user.photo,alt: "image user" %>
        <div class='title'>
               <h2><%= @user.name%></h2>
                <div class = 'counter'>
                    <p>posts counters:<%= @user.posts_counter%></p>
                </div>
        </div>
    </div>
    <div class= 'wraperusers'>
        <% @user.posts.each do |post| %>
            <div class='titleposts'>
            <%= link_to user_post_path(@user, post) do %>
               <h4>Post:<%= post.id%> <%=post.title%></h4>
            <% end %>
               <p><%= post.text%></p>
               <p>
                <div class = 'counter'>
                    <p>comments:<%=post.comments_counter%></p>
                    <p>likes: <%=post.likes_counter%></p>
                </div>
            </div>
            <div class='stylecomments'>
                <% post.comments.each do |comment|%>
                    <ul>
                        <li><%=comment.author.name%>: <%=comment.text%></li>
                    </ul>
                <%end%>
            </div>
        <% end %>
        <%if @user.posts.length > 3%>
        <button class='buttonstyle' type='button'>
            pagination
        </button>
        <%end%>
    </div>
