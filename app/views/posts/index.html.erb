<h1>Posts for the users</h1>
   <div class= 'styleusers'>
        <%= image_tag @user.photo,alt: "image user" %>
        <div class='title'>
               <h2><%= @user.name%></h2>
                <div class = 'counter'>
                    <p>posts counters:<%= @user.postscounter%></p>
                </div>
        </div>
    </div>
    <div class= 'wraperusers'>
        <% @user.recents_post.each do |post| %>
            <div class='titleposts'>
            <%= link_to user_post_path(@user, post) do %>
               <h4>Post:<%= post.id%> <%=post.title%></h4>
            <% end %>
               <p><%= post.text%></p>
               <p>
                <div class = 'counter'>
                    <p>comments:<%=post.commentscounter%></p>
                    <p>likes: <%=post.likescounter%></p>
                </div>
            </div>
            <div class='stylecomments'>
                <% post.recents_comments.each do |comment|%>
                <ul>
                    <li> <%=comment.author.name%>:<%=comment.text%></li>
                </ul>
            <%end%>
            </div>
        <% end %>
        <button class='buttonstyle' type='button'>
            pagination
        </button>
    </div>
